            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='sales']/group[@name='sale']" position="inside">
                    <!--<group string="Catalogs">-->
                        <!--<field name="catalog_ids" widget="many2many_tags"/>-->
                    <!--</group>-->
                </xpath>
            </field>
        </record>

        <record id="view_product_product_template_search_inherit_tzc" model="ir.ui.view">
            <field name="name">product_product_template_search_inherit_tzc</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_search_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='categ_id']" position="before">
                    <!--<field name="catalog_ids"/>-->
                </xpath>
            </field>
        </record>

    </data>
</odoo>

